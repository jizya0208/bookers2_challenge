  <table>
    <% book.book_comments.each do |book_comment| %>
      <% book_comment_user = book_comment.user %>　<!-- ローカル変数定義 -->
        <tr id="comment-#{book_comment.id}">
          <td>
            <%= link_to user_path(book_comment_user), class: "user_#{book_comment_user.id}" do %>
              <%= attachment_image_tag(book_comment.user, :profile_image, format: 'jpg', size: "50x50", fallback: "no-image-icon.jpg") %>
              <%= book_comment_user.name %> 
            <% end %>
          </td>
          <td> <%= book_comment.comment %></td>
          <% if book_comment.user == current_user %>
            <td><%= link_to 'Destroy', book_book_comment_path(book, book_comment), method: :delete, remote: true, class: "btn btn-sm btn-danger" %></td>
          <% end %>
        </tr> 
      <% end %>
 </table>