<% if book.favorited_by?(current_user) %>
  <%= link_to book_favorites_path(book), method: :delete, remote: true, id: "red" do %>
    ❤️<%= book.favorites.count %>       
  <% end %>
<% else %>
  <%= link_to book_favorites_path(book), method: :post, remote: true, id: "blue" do %>
    💙︎<%= book.favorites.count %>
  <% end %>
<% end %>