<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>Create Grouop</h2>
    <%= form_with model:@group, local: true do |f| %>
      <p>グループ名</p>
      <%= f.text_field :name %>
      <p>紹介文</p>
      <%= f.text_area :describe %>
      <p>グループ画像</p>
      <div class="form-group">
        <%= f.label :group_image %>
        <%= f.attachment_field :group_image, class: "form-control-file" %>
      </div>
      <div class="form-group">
        <%= f.submit 'Create Group', class: "btn btn-info" %>
      </div>
    <% end %>
  </div>
</div>
