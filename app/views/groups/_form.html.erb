
<%= form_with model:group, local: true do |f| %>
  <div class="form-group">
    <%= f.label :グループ名 %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :紹介文 %>
    <%= f.text_area :describe, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :グループ画像 %>  
    <%= f.attachment_field :group_image, class: "form-control-file" %>
  </div>
      
  <div class="form-group">
    <%= f.submit 'Create Group', class: "btn btn-info" %>
  </div>
<% end %>
